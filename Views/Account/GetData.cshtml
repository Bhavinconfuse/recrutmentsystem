@model Recrutment_system.Models.ViewModel.Listofoffer
@{
    ViewBag.Title = "GetData";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}


<div>
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Candidate Code</th>
                <th>Department Code</th>
                <th>Department Name</th>
                <th>Candidate Email</th>
                <th>Experience</th>
                <th>Name Of vacancy</th>
                <th>Number Of Position</th>
                <th>Requierd technical skill</th>
                <th>Special Skill</th>
                <th>Min Year of Experience</th>
                <th>Min Qualification</th>
                <th>Deadline Date</th>
                <th>Rond One</th>
                <th>Round One %</th>
                <th>Round Two</th>
                <th>Round Two %</th>
                <th>Round Three </th>
                <th>Round Three %</th>
                <th>Total Round %</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var i in Model.listoffer)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>i.candidatecode)</td>
                    <td>@Html.DisplayFor(m => i.Depetcode)</td>
                    <td>@Html.DisplayFor(m => i.Departmentname)</td>
                    <td>@Html.DisplayFor(m => i.candidateemail)</td>
                    <td>@Html.DisplayFor(m => i.yerofexperience)</td>
                    <td>@Html.DisplayFor(m => i.nameofvacancy)</td>
                    <td>@Html.DisplayFor(m => i.numberofpostion)</td>
                    <td>@Html.DisplayFor(m => i.reqtechnicalskill)</td>
                    <td>@Html.DisplayFor(m => i.specialskill)</td>
                    <td>@Html.DisplayFor(m => i.minyerofexp)</td>
                    <td>@Html.DisplayFor(m => i.minqualifi)</td>
                    <td>@Html.DisplayFor(m => i.deadlinedate)</td>
                    <td>@Html.DisplayFor(m => i.round1)</td>
                    <td>@Html.DisplayFor(m => i.round1P)</td>
                    <td>@Html.DisplayFor(m => i.round2)</td>
                    <td>@Html.DisplayFor(m => i.round2P)</td>
                    <td>@Html.DisplayFor(m => i.round3)</td>
                    <td>@Html.DisplayFor(m => i.round3P)</td>
                    <td>@Html.DisplayFor(m => i.rounding_percent)</td>
                    <td><a href="javascript:void(0)" class="lnkemail">Send Mail</a></td>


                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $("a.lnkemail").on("click", function () {
        alert("Coming soon for this process");
    });
</script>
